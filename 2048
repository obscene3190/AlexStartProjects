#include <iostream>

#include <sstream>

using namespace std;

int check() {
	int right(int pole[4][4]) {
		for(int i = 0; i<4; i++)
			for(int j = 0; j<4; j++) {
				if(pole[i][j]==pole[i][j+1]) { pole[i][j+1]*=2; pole[i][j]='*'; } 
		}
	}
}


bool readpole(int matrix[4][4])

{

    bool result = true;

    for (int i = 0; i<4; i++) {

        string string;

        getline(cin, string);

        istringstream stream(string);

        for (int j = 0; j < 3; ++j) {

            if (!(stream >> matrix[i][j])) {

                result = false;

                break;

            }

        }

    }

    return result;

}


