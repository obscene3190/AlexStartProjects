#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;

int palindrom(string name) {
	int res = 1, len = name.length();
	for (int i = 0; i < len / 2; i++) {
		if (name[i] == name[len - 1 - i]) { res *= 1; }
		else { res *= 0; break; }
	}
	return res;
}
string fixing(string name) {
	int len = name.length();
	for (int i = 0; i < len; i++) {
		name[i] = tolower(name[i]);
	}
	string namefixed;
	for (int i = 0; i < len; i++) {
		if ((name[i] > 96) && (name[i] < 123)) { namefixed += name[i]; }
	}
	return namefixed;
}
int main()
{
	string name;
	getline(cin, name);
	cout << palindrom(fixing(name));
	cin.get();
}
