#include <iostream>
#include <sstream>
#include <cmath>
#include <fstream>

using namespace std;

float** create(float** &matrix, unsigned int rows, unsigned int columns) {
    matrix = new float *[rows];
    for (unsigned int i = 0; i < rows; ++i) {
        matrix[i] = new float[columns];
        for (unsigned int j = 0; j < columns; ++j) {
            matrix[i][j] = 0.0f;
        }
    }
    return matrix;
}

